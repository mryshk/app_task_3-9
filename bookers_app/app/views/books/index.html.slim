p.flash
  = flash[:notice]
h1
  | Books
table
  thead
    tr
      th
        | Title
      th
        | Body
      th[colspan="3"]

  tbody
    - @books.each do |book|
      tr
        td
          = book.title
        td
          = book.body
        td
          = link_to "Show",book_path(book.id)
        td
          = link_to "Edit",edit_book_path(book.id)
        td
          = link_to "Destroy",destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?"
h1
  | New book
div
  - if @book.errors.any?
    .error_explanation
      h2
        = @book.errors.count
        | Â errors prohibited this book from being saved:
      div
        - @book.errors.full_messages.each do |message|
          ul
            li
              = message
= form_with model:@book,url:'/books',local:true do |f|
  .field
    h4
      | Title
    = f.text_field :title
  .field
    h4
      | Body
    = f.text_area :body
  .action
    = f.submit 'Create Book'
